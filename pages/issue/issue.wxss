/* pages/issue.wxss */
.issuecontainer{
  display: flex;
  flex-direction: column;
}
.line{
  color: #c0bdbd;
  align-self: center;
}
.limits{
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  color:#888181;
  margin-left:40rpx;
  margin-top: 30rpx;
}
.limits image{
  width: 40rpx;
  height: 40rpx;
}
.posi{
  position: fixed;
  right: 40rpx;
}
.issueimage{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}
.issueimage image{
  width: 180rpx;
  height: 180rpx;
}
.txtsend{
  position: fixed;
  right: 30rpx;
  color:#C45606;
  font-size: 30rpx;
  margin-top: 10rpx;
}

/* pages/uploadImg/uploadImg.wxss */
.imgselect{
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  margin:20rpx 6rpx;
  align-items: center;
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}

.imgselect image, .imgselected image{
  border:  #DCDCDC solid 1rpx;
  margin:auto;
  width: 150rpx;
  height: 150rpx;
}

.imgselected{
  width: 200rpx;
  height: 202rpx;
  text-align: center;
  margin:20rpx 6rpx;
  padding:0px;
  align-items: center;
  justify-content: center;
}

.imgContainer{
  display: flex;
  flex-direction: row;
}
