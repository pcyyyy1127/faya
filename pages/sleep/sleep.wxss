/* pages/sleep.wxss */
.sleepcontainer{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.card{
  width: 90vw;
  align-self: center;
  height: 25vh;
  border-radius:14rpx;
  box-shadow: 0px 3px 6px #cdcfcf;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
}
.cardA{
  display: flex;
  flex-direction: row;
  align-self: center;
}
.clock{
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}
.clock text{
  width: 50rpx;
  background-color: #A411D1;
  color: white;
  border-radius: 8rpx;
  font-size: 20rpx;
  padding: 0 15rpx 0 15rpx;
  margin-left: 10rpx;
}
.clock image{
  width: 30rpx;
  height: 30rpx;
}
.clockdetail{
  display: flex;
  flex-direction: row;
  margin-top: 35rpx;
}
.signbox{
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 25rpx;
  color: #A411D1;
}
.sign{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  justify-content: center;
  align-items: center;
  border: #A411D1 1px solid;
  margin: 10rpx 80rpx 0 80rpx;
  font-size: 40rpx;
}

.txt{
  align-self: center;
  font-size: 30rpx;
  color: #A411D1;
  margin-top: 55rpx;
}
.cardB{
  width: 66vw;
  align-self: center;
  height: 55vh;
  border-radius:14rpx;
  box-shadow: 0px 3px 6px #cdcfcf;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.wordimg{
  width:66vw;
  height: 20vh;
  border-radius: 14rpx 14rpx 0 0;
}
.txtcontent{
  font-size: 25rpx;
  color:gray;
  margin:40rpx;
  line-height: 20px;
}
.yaya{
  font-size: 20rpx;
  color:gray;
  line-height: 20px;
  align-self: center;
  margin-top: 50rpx;
}
.imgbox{
  width: 200rpx;
  height: 200rpx;
  align-self: center;
  margin-top: 50rpx;

}
.musicimg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  position: absolute;
  z-index: -1;
}
.playicon{
  z-index: 2;
  width:60rpx;
  height: 60rpx;
  margin:75rpx 0 0 75rpx
}
